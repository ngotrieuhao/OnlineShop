@model OnlineShop.ViewModels.Sales.CouponUpdateRequest
@{

    ViewData["Title"] = "Promotion Update";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .validation-summary-valid span {
        display: none;
    }
</style>

<div class="container-fluid">
    <h1 class="mt-4">Promotion Update @Model.Code</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a style="color: #0779e4;" href="/">Homepage</a></li>
        <li class="breadcrumb-item active">Promotion Update</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Coupon">Back to list</a>
        </div>

        <div class="card-body">
            <div class="col-md-8">
                <form asp-action="Edit" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Id" type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <label asp-for="Code" class="control-label">Code</label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Count" class="control-label">Quantity</label>
                        <input asp-for="Count" class="form-control" />
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Promotion" class="control-label">Percent decrease</label>
                        <input asp-for="Promotion" class="form-control" />
                        <span asp-validation-for="Promotion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Describe" class="control-label">Description</label>
                        <textarea id="txt_details" asp-for="Describe" rows="5" class="form-control"></textarea>
                        <span asp-validation-for="Describe" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>