<body class="sb-nav-fixed">
    @await Component.InvokeAsync("Navigation")
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu" style=" background: white;">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading" style="color: black;">ADMINISTRATION SYSTEM</div>
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt" style="color: black;"></i></div>
                            Homepage
                        </a>
                        <div class="sb-sidenav-menu-heading" style="color: black;">SYSTEM</div>
                        <a class="nav-link" asp-controller="Product" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-dice-d6" style="color:black;"></i></div>
                            Product
                        </a>
                        <a class="nav-link" asp-controller="Category" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-list-ul" style="color: black;"></i></div>
                            Category
                        </a>
                        <a class="nav-link" asp-controller="User" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-address-book" style="color: black;"></i></div>
                            Customer
                        </a>
                        <a class="nav-link" asp-controller="Order" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fa fa-shopping-cart" style="color: black;"></i></div>
                            Order
                        </a>
                        <a class="nav-link" asp-controller="Coupon" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fa fa-credit-card" style="color: black;"></i></div>
                            Promotion
                        </a>
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                @RenderBody()
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="/js/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>